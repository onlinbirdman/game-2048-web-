/* app.wxss */
.game_area {
  padding: 100rpx 60rpx;
}
.bg_box {
  width:590rpx;
  height:590rpx;
  border: 20rpx solid #bbada0;
  border-radius: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: space-between;
  position:relative;
}
.bg_grid {
  border-radius: 6rpx;
  text-align: center;
  line-height: 140rpx;
  font-size: 80rpx;
  font-weight: 700;
  color:#776e65;
  width:140rpx;
  height: 140rpx;
  transition: width 1s;
}

/*数字元素样式*/
.n0{background: rgba(238, 228, 218, 0.35);color:rgba(238, 228, 218,0)}
.n2{background-color:#eee3da;}
.n4{background-color:#ede0c8;}
.n8{background-color:#f2b179;}
.n16{background-color:#f59563;}
.n32{background-color:#f67c5f;}
.n64{background-color:#f65e3b;}
.n128{background-color:#edcf72;}
.n256{background-color:#edcc61;}
.n512{background-color:#9c0;}
.n1024{background-color:#33b5e5;}
.n2048{background-color:#09c;}
.n8,.n16,.n32,.n64,.n128,.n256,.n512,.n1024,.n2048{color:#fff;}
.n128,.n256,.n512,.n1024,.n2048{font-size:50rpx;}
